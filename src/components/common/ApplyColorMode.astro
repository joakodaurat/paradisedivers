<script is:inline>
  // Siempre aplica el tema claro
  function applyTheme() {
    document.documentElement.classList.remove('dark');
    const matches = document.querySelectorAll('[data-aw-toggle-color-scheme] > input');

    if (matches && matches.length) {
      matches.forEach((elem) => {
        elem.checked = true;
      });
    }
  }

  // Llama a applyTheme para asegurarse de que el modo claro esté siempre activo
  applyTheme();

  // Opcional: eliminar cualquier configuración previa del tema en localStorage
  localStorage.removeItem('theme');
</script>
